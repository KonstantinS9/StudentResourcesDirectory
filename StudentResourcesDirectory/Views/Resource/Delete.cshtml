@using StudentResourcesDirectory.ViewModels.ResourceViewModels
@model ResourceDeleteViewModel

@{
    ViewData["Title"] = "Delete Resource";
}

<div class="container mt-5">

    <div class="card shadow border-0 col-md-6 mx-auto">
        <div class="card-body text-center">

            <h2 class="text-danger fw-bold mb-3">
                Delete Resource
            </h2>

            <p class="lead">
                Are you sure you want to delete:
            </p>

            <h4 class="fw-bold text-dark mb-4">
                "@Model.Title"
            </h4>

            <form asp-action="Delete" method="post">

                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-center gap-3">

                    <button type="submit" class="btn btn-danger px-4">
                        Yes, Delete
                    </button>

                    <a asp-action="MyResources" class="btn btn-secondary px-4">
                        Cancel
                    </a>

                </div>

            </form>

        </div>
    </div>

</div>


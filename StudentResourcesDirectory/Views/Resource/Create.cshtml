@using StudentResourcesDirectory.Models.Enums
@using StudentResourcesDirectory.Models.ViewModels.ResourceViewModels
@model CreateResourceViewModel

@{
    ViewData["Title"] = "Create Resource";
    var categories = Model?.Categories?
        .Select(c => new SelectListItem(c.Name, c.Id.ToString()))
        .ToList() ?? new List<SelectListItem>();

    var students = Model?.Students?
    .Select(s => new SelectListItem(s.FirstName, s.Id.ToString()))
    .ToList() ?? new List<SelectListItem>();
}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-lg-7">

            <div class="card shadow-lg border-0 create-card">

                <div class="card-body p-5">

                    <h2 class="text-center fw-bold mb-4">
                        ➕ Add New Resource
                    </h2>

                    <form asp-action="Create" method="post">

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter resource title..." />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description"
                                      class="form-control"
                                      rows="3"
                                      placeholder="Short description..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Url" class="form-label"></label>
                            <input asp-for="Url" class="form-control" placeholder="https://..." />
                            <span asp-validation-for="Url" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ResourceType" class="form-label"></label>
                            <select asp-for="ResourceType" class="form-select">
                                @foreach (var type in Enum.GetValues(typeof(ResourceType)))
                                {
                                    <option value="@type">@type</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label"></label>
                            <select asp-for="CategoryId"
                                    asp-items="categories"
                                    class="form-select"></select>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                Save Resource
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


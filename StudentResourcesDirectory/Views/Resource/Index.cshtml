@using StudentResourcesDirectory.ViewModels.ResourceViewModels
@model IEnumerable<ResourceViewModel>

@{
    ViewData["Title"] = "Resources";
}

<div class="container mt-4">

    <div class="text-center mb-5">
        <h1 class="fw-bold">📚 Learning Resources</h1>
        <p class="text-muted">Browse and manage shared student materials</p>

        <a asp-action="Create" class="btn btn-success mt-2">
            + Add New Resource
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No resources found.
        </div>
    }
    else
    {
        <div class="row g-4">

            @foreach (var resource in Model)
            {
                <div class="col-md-6 col-lg-4">

                    <div class="card resource-card h-100 shadow-sm border-0">

                        <div class="card-body d-flex flex-column">

                            <div class="mb-2">
                                <span class="badge bg-gradient">
                                    @resource.ResourceType
                                </span>
                            </div>

                            <h5 class="fw-bold mb-2">
                                @resource.Title
                            </h5>

                            <p class="small text-secondary mb-1">
                                📂 @resource.Description
                            </p>

                            <p class="small text-secondary mb-1">
                                📂 @resource.Category
                            </p>

                            <p class="small text-secondary mb-3">
                                👤 @resource.Student
                            </p>

                            <p class="small text-secondary mb-3">
                                📂 @resource.ResourceType
                            </p>

                            <div class="mt-auto">

                                <a href="@resource.Url"
                                   target="_blank"
                                   class="btn btn-outline-primary w-100 mb-2">
                                    Open Resource
                                </a>

                                <div class="d-flex gap-1">
                                    <a asp-action="Details"
                                       asp-route-id="@resource.Id"
                                       class="btn btn-info w-100 btn-sm">
                                        Details
                                    </a>

                                    <a asp-action="Edit"
                                       asp-route-id="@resource.Id"
                                       class="btn btn-warning w-100 btn-sm">
                                        Edit
                                    </a>

                                    <a asp-action="Delete"
                                       asp-route-id="@resource.Id"
                                       class="btn btn-danger w-100 btn-sm">
                                        Delete
                                    </a>
                                </div>

                            </div>

                        </div>
                    </div>

                </div>
            }

        </div>
    }

</div>

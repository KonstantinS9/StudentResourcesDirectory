@using StudentResourcesDirectory.ViewModels.StudentViewModels
@model IEnumerable<StudentViewModel>

@{
    ViewData["Title"] = "All Students";
}

<div class="container mt-4">

    <div class="text-center mb-5">
        <h1 class="fw-bold">👩‍🎓 Students</h1>
        <p class="text-muted">Browse all registered students</p>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No students found.
        </div>
    }
    else
    {
        <div class="row g-4">

            @foreach (var student in Model)
            {
                <div class="col-md-6 col-lg-4">

                    <div class="card student-card h-100 shadow-sm border-0">

                        <div class="card-body d-flex flex-column text-center">

                            <h5 class="fw-bold mb-2">
                                @student.FirstName @student.LastName
                            </h5>

                            <p class="small text-secondary mb-1">
                                🎓 Faculty Number: @student.FacultyNumber
                            </p>

                            <p class="small text-secondary mb-1">
                                📧 Email: @student.Email
                            </p>

                            <p class="small text-secondary mb-3">
                                🗓 Registered On: @student.RegisteredOn.ToString("dd.MM.yyyy")
                            </p>

                            <div class="mt-auto d-flex gap-2">
                                <a asp-action="Details"
                                   asp-route-id="@student.Id"
                                   class="btn btn-outline-primary w-50 btn-sm">
                                    Details
                                </a>

                                <a asp-controller="Student"
                                   asp-action="ViewResources"
                                   asp-route-studentId="@student.Id"
                                   class="btn btn-outline-primary w-50 btn-sm">
                                    View Resources
                                </a>
                            </div>

                        </div>
                    </div>

                </div>
            }

        </div>
    }
</div>